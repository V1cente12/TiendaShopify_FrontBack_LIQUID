{%- unless style_btn -%}
  {%-assign style_btn = ''-%}
{%- endunless -%}
{%- unless position_btn -%}
  {%-assign position_btn = ''-%}
{%- endunless -%}
{%- unless label -%}
  {%-assign label = 'products.product.add_to_cart' | t -%}
{%- endunless -%}
<input type="hidden" name="id" value="{{product.selected_or_first_available_variant.id}}"><input type="hidden" name="quantity" value="1">
{%- if preOrder -%}
  <div data-submit class="{{style_btn}} btn-onclick add_to_cart_button addItemAjax" data-vrid="{{product.selected_or_first_available_variant.id}}" data-pid="{{product.id}}"><span class="text-nowrap addItemAjax-text">{{'products.product.pre_order'|t}}</span></div>
{%- elsif sold_out == false -%}
  <div data-submit class="{{style_btn}} btn-onclick add_to_cart_button addItemAjax" data-vrid="{{product.selected_or_first_available_variant.id}}" data-pid="{{product.id}}"><span class="text-nowrap addItemAjax-text">{{label}}</span></div>
{%- else -%}
  <div class="{{style_btn}} add_to_cart_button addItemAjax sold_out disabled"><span class="text-nowrap">{{'products.product.sold_out'|t}}</span></div>
{%- endif -%}