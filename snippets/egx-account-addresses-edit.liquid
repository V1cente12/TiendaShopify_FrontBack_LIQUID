        <div class="row">
            <div class="col-md-5 form-field egx_ocultar" id="billing_first_name_field">
                <label for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.first_name' | t }} <span
                        title="Este campo es obligatorio" class="colorRojo">(*)</span></label>
                <input type="text" id="AddressFirstName_{{ form.id }}" class="idAddressFirstName form-control"
                    name="address[first_name]" value="{{ form.first_name }}" required>
                <small></small>
            </div>
            <div class="col-md-5 form-field" id="billing_last_name_field">
                <label for="AddressLastName_{{ form.id }}">Alias <span title="Este campo es obligatorio"
                        class="colorRojo">(*)</span></label>
                <input type="text" id="AddressLastName_{{ form.id }}" class="textoRef idAddressLastName form-control"
                    name="address[last_name]" value="{{ form.last_name }}" required>
                <small></small>
                <div>
                    <span class="spanTitle">Ej: Casa, Trabajo, Otros.</span>
                </div>
            </div>
            <div class="col-md-7 form-field" id="billing_phone_field">
                <label for="AddressPhone_{{ form.id }}">{{ 'customer.addresses.phone' | t }} <span
                        title="Este campo es obligatorio" class="colorRojo">(*)</span></label>
                <input type="text" minlength="7" maxlength="8"
                    onkeypress="return event.charCode>=48 && event.charCode<=57" id="AddressPhone_{{ form.id }}"
                    class="idAddressPhone form-control" name="address[phone]" required value="{{ form.phone }}">
                <small></small>
            </div>
        </div>





