            <h3 style="--color: {{block.settings.color_titlex_1}}">{{block.settings.titlex_1}}</h3>
            <a href="{{block.settings.image_link_1|default:'#'}}" class="btn {{block.settings.style_btn_1}} {{block.settings.style_btn_rounded_1}}{%if block.settings.btn_shadow_1%} btn-shadow{%endif%}" aria-label="{{block.settings.name_btn_1| strip_html}}">{{block.settings.name_btn_1}}</a>
          </div>
          {%- assign use_css = true -%}
          {%- endunless -%}
          {%- assign image_item = block.settings.image_1 -%}
          {%-assign width = image_item.width | default: 380.00 -%}{%-assign height = image_item.height | default: 546.00 | plus: 0.00-%}
