{%- if settings.use_header_mobile_logo_center -%}
<div class="{{section.settings.width_header}}">
  <div class="main-header-top kt--drop-w kt--drop-w-d">
    {%- if section.settings.use_header_announcement or section.settings.use_header_top and settings.color_headt_bg == settings.color_head_bg -%}
    <div class="clearfix border-top{%unless section.settings.sticky_header_top%} not-sticky{%endunless%}" style="opacity: .5"></div>
    {%- endif -%}
    <div class="row min-height align-items-center justify-content-between">
      <div class="header-control col-3 col-lg-auto d-xl-none order-first">
        <div class="control-inner">
          <div class="mobile-block block-menu-bar">
            <div class="menu-bar menu-toggle"><span class="icon"><span></span><span></span><span></span></span></div>
          </div>
        </div>
      </div>
      <div class="header-logo col-6 col-lg-2 col-xl-3 text-center text-lg-left order-1">
        {%- render 'kt_logo_header' -%}
      </div>
      {%- if settings.use_header_mobile_search_box and template.name != 'search' -%}
      <div class="header-control col-12 col-lg-6 order-last order-lg-2">
        <div class="control-inner">
          <div class="block-search input-cat d-block">
            {% render 'search-bar', search_style: "input-cat-left" %}
          </div>
        </div>
      </div>
      {%- elsif settings.use_header_mobile_search_box == false -%}
      <div class="header-control col-12 col-lg-6 d-none d-lg-block order-2">
        <div class="control-inner">
          <div class="block-search input-cat d-block">
            {% render 'search-bar', search_style: "input-cat-left" %}
          </div>
        </div>
      </div>
      {%- endif -%}
      <div class="header-control col-3 order-3">
        <div class="control-inner d-flex align-items-center justify-content-end">
          {%- if shop.customer_accounts_enabled and settings.use_account -%}
          <div class="block-account">
            <a href="{%if customer%}{{routes.account_url}}{%else%}{{routes.account_login_url}}{%endif%}" class="icon-link"><div class="icon-count"><svg class="molla-svg-icon" viewBox="0 0 32 32"><use xlink:href="#icon-user"></use></svg></div><span>{{'customer.account.mini_title'|t}}</span></a>
          </div>
          {%- endif -%}
          {%- if section.settings.use_compare and settings.use_compare-%}
          <div class="block-compare d-none d-lg-block">
            <div class="mini-compare load kt--drop-i">
              <div class="icon-link kt--drop-title"><div class="icon-count kt-button"><svg class="molla-svg-icon" viewBox="0 0 32 32"><use xlink:href="#icon-compare"></use></svg><span class="count compareCount">0</span></div><span>{{'products.compare.mini_title'|t}}</span></div>
              <div class="mini-compare-content kt--drop-in"><div class="no-compare"><p>{{'products.compare.no_compare'|t}}</p></div><div class="mini-compare-body"></div></div>
            </div>
          </div>
          {%- endif -%}
          {%- if section.settings.use_wishlist and settings.use_wishlist != '' -%}
          <div class="block-wishlist d-none d-lg-block">
            {%- assign wishlist_page = pages['wishlist-local'] -%}{%- if settings.use_wishlist == 'nitro' -%}{%- assign wishlist_page = pages['wishlist'] -%}{%- endif -%}
            <a href="{%if settings.use_wishlist == 'nitro'%}{%if customer%}{{wishlist_page.url}}{%else%}{{routes.account_login_url}}{%endif%}{%else%}{{wishlist_page.url}}{%endif%}" class="icon-link"><div class="icon-count"><svg class="molla-svg-icon" viewBox="0 0 32 32"><use xlink:href="#icon-wishlist"></use></svg><span class="count wishlist-count">0</span></div><span>{{'products.wishlist.mini_title'|t}}</span></a>
          </div>
          {%- endif -%}
          {%- if section.settings.use_cart-%}
          <div class="block-minicart">
            {%- render 'kt_mini-cart' -%}
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- unless cart.attributes.theme_mobile == 'true' -%}
<div class="header-bottom d-none d-lg-block{%if section.settings.categories_dropdown%} has_categories{%endif%}">
  <div class="{{section.settings.width_header}}">
    <div class="main-header">
      <div class="row align-items-center justify-content-between">
        <div class="header-menu horizon-menu col-12 col-lg d-none d-lg-block">
          <nav class="main-navigation" data-width="992">
            {%- render 'menu_import' -%}
          </nav>
        </div>
        {%- if section.settings.categories_dropdown -%}
        <div class="header-control col-auto order-lg-first">
          <div class="dropdown category-dropdown{%if section.settings.list_categories_2_open and template.name == 'index'%} show{%endif%}">
            <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="{%if section.settings.list_categories_2_open and template.name == 'index'%}true{%else%}false{%endif%}" data-display="static" title="{{section.settings.title_categories}}" aria-label="{{section.settings.title_categories}}">{{section.settings.title_categories}}</a>
            <div class="dropdown-menu dropdown-menu-right{%if section.settings.list_categories_2_open and template.name == 'index'%} show{%endif%}">
              <nav class="side-nav lazyload" data-include="{{routes.root_url}}?section_id=kt_mega_mn-vertical"><div class="lz-place"></div>
              {%-style-%}.side-nav .lz-place:before {background-size: 85% 18px,85% 18px,85% 18px,85% 18px,85% 18px,85% 18px,85% 18px,85% 18px,85% 18px,85% 18px;background-position: 20px 20px,20px 56px,20px 92px,20px 128px,20px 164px,20px 200px,20px 236px,20px 272px,20px 308px,20px 344px;padding-top: 38rem;}
              {%-endstyle-%}
              </nav>
            </div>
          </div>
        </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- endunless -%}
