<!-- md-collection-banners-box.liquid -->
{%- liquid
  assign width_section = section.settings.width_section
  assign width_content = section.settings.width_content
  capture width_section_
    if width_section == 'container-fluid wide' and width_content == false
      echo 'w-100'
    else
      echo width_section
    endif
  endcapture
  capture width_content_
    if width_content and width_section == 'w-100'
      echo 'container'
    elsif width_section == 'container-fluid wide' and width_content == false
      echo 'container-fluid wide'
    else
      echo 'w-100'
    endif
  endcapture
-%}

{%-if section.blocks.size != 0-%}
{%- unless cart.attributes.theme_mobile == 'true' and section.settings.off_mobile or cart.attributes.theme_mobile == 'false' and section.settings.off_desktop -%}

{%-capture slideshow-css-%}
{%- style -%}
{%- assign section_id = '.slide_i--' | append: section.id -%}
{{- section.settings.css_section | replace: ".section_id", section_id | strip_newlines -}}
.content_{{section.id}}{
  padding:{{ section.settings.section_padding | default: '0' | split: '|' | first | replace : '-',' '}};
  margin-top: {{section.settings.section_margin_top | default: '0' | split: '|' | first }};
  margin-bottom: {{section.settings.section_margin_bottom | default: '0' | split: '|' | first }};
  {%-if section.settings.section_bg != blank -%}
    background-color:{{section.settings.section_bg | color_modify: 'alpha', section.settings.section_bg_op}};
  {%-endif-%}
}
{%- capture settings_fonts -%}
  {{-settings.font_base_family.family-}},
  {{-settings.font_main_header_family.family-}},
  {{-settings.font_section_sub_title_family.family-}}
{%- endcapture -%}
{%- assign fonts = settings_fonts | split: ',' | uniq -%}
{%- assign fullscreen = section.settings.fullscreen -%}
{%- for block in section.blocks-%}
  {%- if block.type != 'image' and block.type != 'video' -%}{%-continue-%}{%- endif -%}
  {%- if block.settings.turnoff -%}{%-continue-%}{%- endif -%}  
  {%- assign image_item = block.settings.image -%}
  {%- assign height = image_item.height | default: 782 -%}
  {%- assign width = image_item.width | default: 1920 -%}
  {%- assign first_ratio = height | times: 1.00 | divided_by: width | times: 100.00000000 | append: '%' -%}
  {%- assign image_item_mb = block.settings.image_mb | default: image_item -%}
  {%- assign size = section.settings.h_reponsive | default : '414' | prepend: 'x' -%}
  {%- if image_item != blank and block.settings.lazypreload -%}
    .slide_i--{{ block.id }} .imgRatio-img {
      background-image: url('{{image_item_mb | img_url: size}}');
    }
    @media (min-width: 768px){
      .slide_i--{{ block.id }} .imgRatio-img {
        background-image: url('{{image_item | img_url: 'master'}}');
      }
    }
  {%- endif -%}
  .slide_i--{{ block.id }} .imgRatio:before {
    padding-bottom: {{image_item_mb.height | times: 1.00 | divided_by: image_item_mb.width | times: 100.00000000}}%;
  }
  {%- if block.settings.image_mb != blank -%}
  @media (min-width: 768px){
    .slide_i--{{ block.id }} .imgRatio:before {
      padding-bottom: {{first_ratio}};
    }
  }
  {%- endif -%}
  {%- if block.settings.heading == blank and block.settings.subheading == blank and block.settings.description == blank and block.settings.textBtn_1 == blank and block.settings.textBtn_2 == blank -%}{%-continue-%}{%- endif -%}
  {%- unless block.settings.heading == blank -%}
    .slide_i--{{ block.id }} .slideshow__title{
      font-family: {{-block.settings.font_heading.family-}};
      font-weight: {{-block.settings.font_heading.weight-}};
      font-style: {{-block.settings.font_heading.style-}};
    }
    {%- unless fonts contains block.settings.font_heading.family -%}
      {%- assign fonts = fonts | join: ',' | append: block.settings.font_heading.family | split: ',' -%}
      {{- block.settings.font_heading | font_face | strip_newlines -}}
    {%- endunless -%}
  {%- endunless -%}
  {%- unless block.settings.subheading == blank -%}
    .slide_i--{{ block.id }} .slideshow__subtitle{
      font-family: {{-block.settings.font_subheading.family-}};
      font-weight: {{-block.settings.font_subheading.weight-}};
      font-style: {{-block.settings.font_subheading.style-}};
    }
    {%- unless fonts contains block.settings.font_subheading.family -%}
      {%- assign fonts = fonts | join: ',' | append: block.settings.font_subheading.family | split: ',' -%}
      {{- block.settings.font_subheading | font_face | strip_newlines -}}
    {%- endunless -%}
  {%- endunless -%}
  {%- unless block.settings.description == blank -%}
    .slide_i--{{ block.id }} .slideshow__description{
      font-family: {{-block.settings.font_description.family-}};
      font-weight: {{-block.settings.font_description.weight-}};
      font-style: {{-block.settings.font_description.style-}};
    }
    {%- unless fonts contains block.settings.font_description.family -%}
      {%- assign fonts = fonts | join: ',' | append: block.settings.font_description.family | split: ',' -%}
      {{- block.settings.font_description | font_face | strip_newlines -}}
    {%- endunless -%}
  {%- endunless -%}
  {%-assign align = block.settings.text_alignment | default: 'initial' -%}
  {%-assign align_mb = block.settings.text_alignment_mb | default: align -%}
  {%-assign left = block.settings.text_alignment_left -%}
  {%-assign top = block.settings.text_alignment_top -%}
  {%-assign left_mb = block.settings.text_alignment_left_mb | default: left -%}
  {%-assign top_mb = block.settings.text_alignment_top_mb | default: top -%}
  .slide_i--{{ block.id }} .slide_t-content {
    --x: {{left_mb | append:'%'}};
    --y: {{top_mb | append:'%'}};
  }
  .slide_i--{{ block.id }} .page-width {
    text-align: {{align_mb}};
    --x: -{{left_mb | append:'%'}};
    --y: -{{top_mb | append:'%'}};
  }
  [dir="rtl"] .slide_i--{{ block.id }} .page-width {
    --x: {{left_mb | append:'%'}};
  }
  @media (min-width: 768px) {
    .slide_i--{{ block.id }} .slide_t-content {
      --x: {{left | append:'%'}};
      --y: {{top | append:'%'}};
    }    
    .slide_i--{{ block.id }} .page-width {
      text-align: {{align}};
      --x: -{{left | append:'%'}};
      --y: -{{top | append:'%'}};
    }
    [dir="rtl"] .slide_i--{{ block.id }} .page-width {
      --x: {{left | append:'%'}};
    }
  }
  {%- assign block_id = ' .slide_i--' | append: block.id -%}
  {%- capture css_respon_i -%}
    {{-block.settings.css_block -}}
    {{-block.settings.responsive_css -}}
    {{-block.settings.responsive_css_subheading -}}
    {{-block.settings.responsive_css_description -}}
  {%- endcapture -%}
  {{- css_respon_i | replace: ".block_id", block_id -}}
{%-endfor -%}

{%- unless section.settings.fullscreen -%}
  {%- if section.settings.h_reponsive != blank -%}
  .slide_i--{{ section.id }} .imgRatio:before{
    padding-bottom: {{section.settings.h_reponsive | append : 'px' | replace: 'autopx', first_ratio}};
  }
  {%- endif -%}
  {%- if section.settings.h_reponsive_768 != blank -%}
    @media (min-width: 768px){
      .slide_i--{{ section.id }} .imgRatio:before{
        padding-bottom: {{section.settings.h_reponsive_768 | append : 'px' | replace: 'autopx', first_ratio}};
      }
    }
  {%- endif -%}
  {%- if section.settings.h_reponsive_992 != blank -%}
    @media (min-width: 992px){
      .slide_i--{{ section.id }} .imgRatio:before{
        padding-bottom: {{section.settings.h_reponsive_992 | append : 'px' | replace: 'autopx', first_ratio}};
      }
    }
  {%- endif -%}
  {%- if section.settings.h_reponsive_1200 != blank-%}
    @media (min-width: 1200px){
      .slide_i--{{ section.id }} .imgRatio:before{
        padding-bottom: {{section.settings.h_reponsive_1200 | append : 'px' | replace: 'autopx', first_ratio}};
      }
    }
  {%- endif -%}
  {%- if section.settings.h_reponsive_1400 != blank-%}
    @media (min-width: 1400px){
      .slide_i--{{ section.id }} .imgRatio:before{
        padding-bottom: {{section.settings.h_reponsive_1400 | append : 'px' | replace: 'autopx', first_ratio}};
      }
    }
  {%- endif -%}
{%- endunless -%}
{%- endstyle -%}
{%-endcapture-%}
{{ slideshow-css | strip_newlines | remove: '  ' | remove: '  ' }}

<div class="{{width_section_}}{%if section.settings.off_mobile%} d-none d-lg-block{%endif%}{%if section.settings.off_desktop%} d-lg-none{%endif%}" id="Swiper-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="swiper-section">
  <div class="content_{{section.id}}{%if section.settings.image%} bg-image lazyload{%endif%}"{%if section.settings.image%} data-bgset="{{section.settings.image | img_url: 'master'}}" data-sizes="auto" data-parent-fit="contain"{%endif%} data-respon="{'el':'.content_{{section.id}}','mt':'{{section.settings.section_margin_top}}','mb':'{{section.settings.section_margin_bottom}}','p':'{{section.settings.section_padding}}'}">  
    <div class="section-width {{width_content_}} kt_home_slide">
      {%- assign responsive_ = section.settings.responsive | strip_newlines | json | remove: '\t' | remove: '\' | remove: ' ' | replace: '"{"','{"' | replace: '}}"','}}' -%}
      {%- assign items_ = responsive_ | split: '"slidesPerView":' | last | split: ',' | first | plus: 0 -%}
      <div class="swiper-container-fuild position-relative {{section.settings.nav_position}} nav-style{{section.settings.nav_style}} nav-mode-{{section.settings.nav_mode}}">
        <div class="swiper-container{%if section.settings.no_overflow%} swiper-no-overflow{%endif%}" data-breakpoints='{{responsive_}}' data-autoplay="{{section.settings.autoplay}}" data-slides-per-view="{{items_}}" data-dots="{{section.settings.use_dots}}" data-nav="{{section.settings.use_navigation}}" data-scrollbar="{{section.settings.use_scrollbar}}" data-delay="{{section.settings.autoplay_speed}}"{%if section.settings.no_overflow%} data-loop="true" data-loop-additional-slides="2" data-loop-fill-group-with-blank="true" data-no-overflow="true"{% endif %} data-prev-el=".sw-btn-prev-{{section.id}}" data-next-el=".sw-btn-next-{{section.id}}" data-pagination=".swiper-pagination-{{section.id}}">
          <div class="swiper-wrapper">
            {%- for block in section.blocks-%}
            {%- if block.type != 'image' and block.type != 'video' -%}{%-continue-%}{%- endif -%}
            {%- if block.settings.turnoff -%}{%-continue-%}{%- endif -%}
            {%- assign image_item = block.settings.image -%}
            {%- if block.type == 'video' -%}
              {%- assign iframe = false -%}
              {% if block.settings.video_url contains 'youtube.com' or block.settings.video_url contains 'youtu.be' %}
                {%- assign iframe = true -%}
              {% endif %}
            {%- endif-%}
            <div class="swiper-slide slide_i slide_i--{{ section.id }} slide_i--{{ block.id }}" data-slide-blockid="{{ block.id }}" {{ block.shopify_attributes }}{% if block.type == 'video' %} data-swiper-autoplay="{{block.settings.delay_speed|times: 1000}}"{% endif %}>
              {%- assign node = 'div' -%}
              {%- if block.settings.textBtn_1 == blank and block.settings.textBtn_2 == blank and block.type != 'video' -%}
                {%- capture node -%}a href="{{ block.settings.link_1 | default: '#'}}"{%- endcapture -%}
              {%- endif -%}
              <{{node}} class="imgRatio{%if fullscreen%} f-height{%endif%}">
              {%- if block.type == 'video' and iframe -%}
                <div class="bgndVideo player" data-property="{videoURL:'{{block.settings.video_url}}'{{-block.settings.data_property-}} }"></div>
              {% elsif block.type == 'video' and iframe == false %}
                <video playsinline autoplay loop muted{%if block.settings.image%} poster="{{block.settings.image|img_url: 'master'}}"{%endif%}>{{block.settings.video_url|html}}</video>
              {%- endif-%}

              {%- if image_item != blank and block.settings.lazypreload == false or block.type == 'video'-%}
                <div class="item-slide{%if block.settings.image_mb != blank%} d-none d-md-block{%endif%} imgRatio-img lazyload" data-bgset="{%- render 'bgset', image: image_item, prioritize: 'height' -%}" data-sizes="auto"></div>
                {%-if block.settings.image_mb != blank-%}
                  {%- assign image_item = block.settings.image_mb -%}
                  <div class="item-slide d-md-none imgRatio-img lazyload" data-bgset="{%- render 'bgset', image: image_item, prioritize: 'height' -%}" data-sizes="auto"></div>
                {%- endif -%}
              {%- else -%}
                <div class="item-slide imgRatio-img"></div>
              {%- endif -%}
              </{{node | split: ' ' | first}}>
              {%- if block.settings.heading != blank or block.settings.subheading != blank or block.settings.description != blank or block.settings.textBtn_1 != blank or block.settings.textBtn_2 != blank -%}
              <div class="imgRatio__text-wrap">                                      
                <div class="slide_t-wrap{% if block.settings.width_section %} container{% endif %}">
                  <div class="slide_t-content">
                    <div class="page-width">
                      {%- unless block.settings.heading == blank -%}
                        <div class="sl-anime slideshow__title">{{- block.settings.heading | html -}}</div>
                      {%- endunless -%}
                      {%- unless block.settings.subheading == blank -%}
                        <div class="sl-anime slideshow__subtitle">{{- block.settings.subheading | html -}}</div>
                      {%- endunless -%}
                      {%- unless block.settings.description == blank -%}
                        <div class="sl-anime slideshow__description">{{- block.settings.description | html -}}</div>
                      {%- endunless -%}
                      {%- if block.settings.textBtn_1 != blank -%}
                        <div class="sl-anime slideshow__button list-inline-item{% if block.settings.textBtn_2 != blank and block.settings.link_2 != blank %} mr-2{% endif %}">{{--}}
                          <a class="btn {{block.settings.style_btn_1}} {{block.settings.style_btn_rounded_1}}{%if block.settings.btn_shadow_1%} btn-shadow{%endif%}" href="{{ block.settings.link_1 | default: '#' }}">{{ block.settings.textBtn_1 | html }}</a>{{--}}
                        </div>
                      {%- endif -%}
                      {%- if block.settings.textBtn_2 != blank and block.settings.link_2 != blank -%}
                        <div class="sl-anime slideshow__button list-inline-item last">{{--}}
                          <a class="btn {{block.settings.style_btn_2}} {{block.settings.style_btn_rounded_2}}{%if block.settings.btn_shadow_2%} btn-shadow{%endif%}" href="{{ block.settings.link_2 | default: '#' }}">{{ block.settings.textBtn_2 | html }}</a>{{--}}
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </div>
              {%- endif -%}
            </div>
            {%-endfor -%}
          </div>
          {%- if section.settings.use_dots -%}
          <div class="swiper-pagination swiper-pagination-{{section.settings.dots_mode}} swiper-pagination-{{section.id}}"></div>
          {%- endif -%}
          {%- if section.settings.use_scrollbar -%}
          <div class="swiper-scrollbar scrollbar-primary"></div>
          {%- endif -%}
        </div>
        {%- if section.settings.use_navigation -%}
        <div class="swiper-buttons position-absolute">
          <div class="content-buttons position-relative">
            <div class="swiper-button-prev sw-btn-prev-{{section.id}} fkt-2x fkt-va"></div>{{--}}
            <div class="swiper-button-next sw-btn-next-{{section.id}} fkt-2x fkt-va"></div>
          </div>
        </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- endunless-%}
{%-endif-%}
